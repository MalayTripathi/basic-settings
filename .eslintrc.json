{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["standard", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "no-unused-vars": "off",
    "semi-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 2
      }
    ],
    "no-inline-comments": "error",
    "no-useless-escape": "off",
    "no-var": "error",
    "max-len": [
      2,
      200,
      {
        "ignoreUrls": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "prefer-promise-reject-errors": [
      "error",
      {
        "allowEmptyReject": true
      }
    ],
    "dot-notation": "off"
  }
}
